{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages",
    "docs"
  ],
  "type": "module",
  "scripts": {
    "test": "npm run test --workspace=packages",
    "lint:library": "npm run lint --workspace=packages",
    "lint-nw:library": "npm run lint:nw --workspace=packages",
    "clean:docs": "npm run clear --workspace=docs",
    "dev:docs": "npm run start --workspace=docs",
    "build:library": "npm run build --workspace=packages",
    "build:docs": "npm run build --workspace=docs",
    "serve:docs": "npm run serve --workspace=docs"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.7",
    "@eslint/js": "^9.21.0",
    "@types/react": "^19.0.10",
    "esbuild": "0.25.0",
    "esbuild-sass-plugin": "^3.3.1",
    "eslint": "^9.21.0",
    "eslint-plugin-react": "^7.37.4",
    "globals": "^16.0.0",
    "sass": "^1.85.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.1",
    "typescript-plugin-css-modules": "^5.1.0"
  }
}
