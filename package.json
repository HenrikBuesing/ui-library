{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*",
    "docs"
  ],
  "type": "module",
  "scripts": {
    "lint": "turbo lint",
    "lint:library": "turbo lint --filter=@hbuesing/ui-library",
    "clear": "turbo clear",
    "dev": "turbo dev",
    "build": "turbo build",
    "build:dev": "turbo build:dev",
    "build:types": "turbo build:types",
    "build:library": "turbo build --filter=@hbuesing/ui-library",
    "test": "turbo test",
    "test:watch": "turbo test:watch --ui=tui",
    "test:coverage": "turbo test:coverage",
    "start": "turbo start",
    "storybook": "turbo storybook"
  },
  "dependencies": {
    "react": "19.2.0",
    "react-dom": "19.2.0"
  },
  "devDependencies": {
    "@eslint/compat": "^1.4.1",
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.0",
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2",
    "eslint": "^9.39.1",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.5.0",
    "sass": "^1.93.3",
    "turbo": "^2.6.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3"
  },
  "packageManager": "npm@11.4.1"
}
