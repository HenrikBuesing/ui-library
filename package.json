{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*",
    "docs"
  ],
  "type": "module",
  "scripts": {
    "lint": "turbo lint",
    "lint:library": "turbo lint --filter=@hbuesing/ui-library",
    "clear": "turbo clear",
    "dev": "turbo dev",
    "build": "turbo build",
    "build:dev": "turbo build:dev",
    "build:types": "turbo build:types",
    "build:library": "turbo build --filter=@hbuesing/ui-library",
    "test": "turbo test",
    "test:watch": "turbo test:watch --ui=tui",
    "test:coverage": "turbo test:coverage",
    "start": "turbo start"
  },
  "dependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.8",
    "@eslint/js": "^9.27.0",
    "@types/node": "^22.15.3",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "eslint": "^9.25.1",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.0.0",
    "sass": "^1.87.0",
    "turbo": "^2.5.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.31.1"
  },
  "packageManager": "npm@11.4.1"
}
