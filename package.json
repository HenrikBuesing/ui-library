{
  "name": "root",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "packages",
    "website"
  ],
  "scripts": {
    "lint:library": "npm run lint --workspace=packages",
    "lint:docs": "npm run lint --workspace=website",
    "lint-nw:library": "npm run lint:nw --workspace=packages",
    "lint-nw:docs": "npm run lint:nw --workspace=website",
    "lint-nw": "npm run lint:nw --workspaces",

    "clean:library": "npm run clean --workspace=packages",
    "clear:docs": "npm run clear --workspace=website",

    "dev:library": "npm run dev --workspace=packages",
    "dev:docs": "npm run start --workspace=website",

    "build:library": "npm run build --workspace=packages",
    "build:docs": "npm run build --workspace=website",

    "stats:library": "npm run stats --workspace=packages"
  },
  "peerDependencies": {
    "react": "^18.0.0"
  },
  "devDependencies": {
    "@eslint/compat": "^1.0.3",
    "@eslint/js": "^9.5.0",
    "@types/react": "^18.3.3",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.3",
    "globals": "^15.6.0",
    "react": "^18.3.1",
    "sass": "^1.77.6",
    "typescript": "^5.5.2",
    "typescript-eslint": "^7.14.1"
  }
}
