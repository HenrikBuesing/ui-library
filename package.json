{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*",
    "docs"
  ],
  "type": "module",
  "scripts": {
    "lint": "turbo lint",
    "lint:library": "turbo lint --filter=@hbuesing/ui-library",
    "clear": "turbo clear",
    "dev": "turbo dev",
    "build": "turbo build",
    "build:dev": "turbo build:dev",
    "build:types": "turbo build:types",
    "build:library": "turbo build --filter=@hbuesing/ui-library",
    "test": "turbo test",
    "test:watch": "turbo test:watch --ui=tui",
    "test:coverage": "turbo test:coverage",
    "start": "turbo start"
  },
  "dependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.8",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.23.0",
    "@next/eslint-plugin-next": "^15.2.4",
    "@types/node": "^22.14.0",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.1",
    "eslint": "^9.23.0",
    "eslint-config-next": "^15.2.4",
    "eslint-plugin-react": "^7.37.4",
    "globals": "^16.0.0",
    "sass": "^1.86.2",
    "turbo": "^2.5.0",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.29.0",
    "typescript-plugin-css-modules": "^5.1.0"
  },
  "packageManager": "npm@11.1.0"
}
