{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages",
    "website"
  ],
  "type": "module",
  "scripts": {
    "lint:library": "npm run lint --workspace=packages",
    "lint-nw:library": "npm run lint:nw --workspace=packages",
    "clean:docs": "npm run clear --workspace=website",
    "dev:docs": "npm run start --workspace=website",
    "build:library": "npm run build --workspace=packages",
    "build:docs": "npm run build --workspace=website",
    "serve:docs": "npm run serve --workspace=website"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.2",
    "@eslint/js": "^9.14.0",
    "@types/react": "^18.3.12",
    "esbuild": "0.24.0",
    "esbuild-sass-plugin": "^3.3.1",
    "eslint": "^9.14.0",
    "eslint-plugin-react": "^7.37.2",
    "globals": "^15.12.0",
    "postcss": "^8.4.49",
    "react": "^18.3.1",
    "sass": "^1.80.7",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.14.0",
    "typescript-plugin-css-modules": "^5.1.0"
  }
}
