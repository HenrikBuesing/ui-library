{
  "extends": "../tsconfig-base.json",
  "compilerOptions": {
    "outDir": "./src/uil-bundle",
    "paths": {
      "@site/*": ["./*"],
      "@common/*": ["../packages/src/components/common/*"],
      "@hooks/*": ["../packages/src/hooks/*"],
      "@utils/*": ["../packages/src/utils/*"]
    }
  },
  "include": [
    "../packages/src/components/**/index.ts",
    "../packages/src/hooks/**/index.ts",
    "../packages/src/index.ts",
    "../packages/src/globals.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}