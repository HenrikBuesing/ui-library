{
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "jsx": "react",
    "esModuleInterop": true,
    "declaration": true,
    "baseUrl": "./src",
    "plugins": [{ "name": "typescript-plugin-css-modules" }]
  },
  "include": [
    "./src/components/**/index.ts",
    "./src/hooks/**/index.ts",
    "./src/index.ts",
    "./src/globals.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}