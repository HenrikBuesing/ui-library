{
  "extends": "../tsconfig-base.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist/",
    "paths": {
      "@common/*": ["./components/common/*"]
    }
  },
  "include": [
    "./src/components/**/index.ts",
    "./src/hooks/**/index.ts",
    "./src/index.ts",
    "./src/globals.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}