{
  "extends": "../tsconfig-base.json",
  "compilerOptions": {
    "outDir": "./dist/",
    "paths": {
      "@common/*": ["./src/components/common/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@utils/*": ["./src/utils/*"]
    }
  },
  "include": [
    "./src/components/**/index.ts",
    "./src/hooks/**/index.ts",
    "./src/index.ts",
    "./src/globals.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}