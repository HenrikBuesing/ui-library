{
  "private": false,
  "name": "@hbuesing/ui-library",
  "version": "3.0.0",
  "description": "Collection of reusable ui components for react based applications",
  "source": "src/index.ts",
  "module": "dist/index.mjs",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.modern.mjs"
    },
    "./dist/*.css": {
      "import": "./dist/index.css",
      "require": "./dist/index.css"
    }
  },
  "scripts": {
    "clean": "rimraf ./dist && mkdir dist",
    "lint": "eslint src",
    "lint:nw": "eslint src --max-warnings 0",
    "build": "microbundle build --output ./dist --generateTypes true --format modern --jsx react --globals react/jsx-runtime=jsxRuntime",
    "build:uil": "microbundle build --output ../website/src/uil-bundle --generateTypes true --format modern --jsx react --globals react/jsx-runtime=jsxRuntime",
    "dev": "microbundle -w --jsx react",
    "stats": "microbundle --visualize"
  },
  "license": "MIT",
  "homepage": "https://github.com/HenrikBuesing/ui-library/tree/main#README.md",
  "bugs": "https://github.com/HenrikBuesing/ui-library/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/HenrikBuesing/ui-library.git",
    "directory": "ui-library"
  },
  "peerDependencies": {
    "react": "^18.0.0"
  },
  "devDependencies": {
    "microbundle": "^0.15.1",
    "rimraf": "^5.0.7"
  }
}