{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react",
    "jsxFactory": "",
    "jsxFragmentFactory": "",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "exactOptionalPropertyTypes": true,
    "declaration": true,
    "baseUrl": "./src"
  },
  "include": [
    "./src/**/*"
  ]
}