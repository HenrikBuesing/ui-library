{
  "private": false,
  "name": "@hbuesing/ui-library",
  "version": "5.0.0",
  "description": "Collection of reusable ui components for react based applications",
  "source": "src/index.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./index.css": {
      "import": "./dist/index.css",
      "require": "./dist/index.css"
    }
  },
  "files": [
    "dist/*"
  ],
  "scripts": {
    "lint": "eslint src --max-warnings 0",
    "clear": "npx rimraf dist",
    "build:dev": "NODE_ENV=dev node esbuild.js",
    "build": "NODE_ENV=production node esbuild.js",
    "postbuild": "npm run build:types",
    "build:types": "tsc --emitDeclarationOnly -p tsconfig.build.json",
    "test": "vitest run",
    "test:watch": "vitest -w",
    "test:coverage": "vitest run --coverage"
  },
  "license": "MIT",
  "homepage": "https://www.ui-library.hbsng.com",
  "bugs": "https://github.com/HenrikBuesing/ui-library/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/HenrikBuesing/ui-library.git",
    "directory": "ui-library"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@vitest/coverage-v8": "^3.1.2",
    "esbuild": "0.25.3",
    "esbuild-sass-plugin": "^3.3.1",
    "jsdom": "^26.1.0",
    "typescript-plugin-css-modules": "^5.1.0",
    "vitest": "^3.1.2"
  }
}
