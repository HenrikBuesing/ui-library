{
  "extends": "../../tsconfig-base.json",
  "compilerOptions": {
    "outDir": "./dist/",
    "paths": {
      "@common/*": ["./src/components/common/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@utils/*": ["./src/utils/*"]
    },
    "plugins": [
      {
        "name": "typescript-plugin-css-modules",
        "options": {
          "goToDefinition": true
        }
      }
    ]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}